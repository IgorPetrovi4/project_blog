{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    <div class="container">
        <a href="{{ path('post') }}" type="button" class="btn btn-outline-secondary">Добавить пост</a>

    </div>

    <div class="container">
        <h1>Ваши посты</h1>
        <table class="table  table-sm table-bordered">
            <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Заголовок</th>
                <th scope="col">Пост</th>
                <th scope="col">Удалить</th>
                <th scope="col">Редактировать</th>

            </tr>
            </thead>
            <tbody>

        {% for post in posts %}
            <tr>
                <th>{{ post.id }}</th>
                <td>{{ post.title}} </td>
                <td>{{ post.content}} </td>
                <td><a href="{{ path('remove_post', { 'id': post.id }) }}">Удалить пост</a></td>
                <td><a href="{{ path('edit_post', { 'id': post.id }) }}">Редактировать пост</a></td>


            </tr>
        {% endfor %}
            </tbody>
        </table>

    </div>


{% endblock %}
