<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <title>{% block title %}Welcome!{% endblock %}</title>
</head>
<body>
{% block header %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('home_page') }}">BLOG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavDropdown">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('profile') }}">Профиль</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Регистрация</a>
                </li>

            </ul>
        </div>
        <div class="collapse navbar-collapse  justify-content-end " id="navbarNavDropdown">
            <ul class="navbar-nav">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li class="nav-item ">
                    <a class="navbar-brand">  {{  app.user.username }}</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        Выход
                    </a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">Вход</a>
                    {% endif %}
                </li>
            </ul>
        </div>
    </nav>

{% endblock %}

{% block body %}


{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
{% endblock %}
</body>
</html>